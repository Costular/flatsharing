<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.costular.flatsharing" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".groups.GroupsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".add_group.AddGroupActivity" >
        </activity>
        <activity
            android:name=".group_detail.GroupDetailActivity"
            android:label="@string/title_activity_group_detail"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".group_detail.tasks.tasks_list_detail.TaskListDetailActivity"
            android:label="@string/title_activity_task_list_detail"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
